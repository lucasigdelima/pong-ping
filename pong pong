let xBolinha = 300;
let yBolinha = 200; 
let diametro = 15;
let posrectX;
let posrectY;

let velocidadeXBolinha = 6 
let velocidadeYBolinha = 6

function setup() {
  createCanvas(600, 400);
}

function draw() {
  background(0);
  rect(30, 20, 55, 78, 20);
    circle(xBolinha, yBolinha, diametro, diametro);
    xBolinha += velocidadeXBolinha;
    yBolinha += velocidadeYBolinha;
    bolaColidirRaquete();
    if (xBolinha >= 590) {
      velocidadeXBolinha *= -1;
}
  if (yBolinha >= 390)
    {
      velocidadeYBolinha *= -1;
    }
  if (yBolinha <= 10)
    {
      velocidadeYBolinha *= -1;
    }
  if (xBolinha <= 10)
    {
      velocidadeXBolinha *= -1;
    }
}
